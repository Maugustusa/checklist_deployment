<p id="notice"><%= notice %></p>

<h1>Checklist Deployments</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @checklist_deployments.each do |checklist_deployment| %>
      <tr>
        <td><%= checklist_deployment.title %></td>
        <td><%= checklist_deployment.description %></td>
        <td><%= link_to 'Show', checklist_deployment %></td>
        <td><%= link_to 'Edit', edit_checklist_deployment_path(checklist_deployment) %></td>
        <td><%= link_to 'Destroy', checklist_deployment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Checklist Deployment', new_checklist_deployment_path %>
